<!-- Scaffolding generated by Casein v.3.1.11 -->
<div class="blk-share">
<%
	hoc_ham = ""
	hoc_vi = ""
	trinh_do_chuyen_mon = ""
	ly_luan_ct = ""
	quan_ly_nha_nuoc = ""
	ngoai_ngu = ""

	if @can_bo_trinh_do.hoc_ham_id
		hoc_ham = @can_bo_trinh_do.hoc_ham.ten_hoc_ham
	end

	if @can_bo_trinh_do.hoc_vi_id
		hoc_vi = @can_bo_trinh_do.hoc_vi.ten_hoc_vi
	end

	if @can_bo_trinh_do.trinh_do_chuyen_mon_id
		trinh_do_chuyen_mon = @can_bo_trinh_do.trinh_do_chuyen_mon.trinh_do
		if @can_bo_trinh_do.chuyen_nganh_id
			trinh_do_chuyen_mon << " #{@can_bo_trinh_do.chuyen_nganh.ten_chuyen_nganh}"	
		end
	end

	if @can_bo_trinh_do.ly_luan_chinh_tri_id
		ly_luan_ct = @can_bo_trinh_do.ly_luan_chinh_tri.trinh_do
	end

	if @can_bo_trinh_do.quan_ly_nha_nuoc_id
		quan_ly_nha_nuoc = @can_bo_trinh_do.quan_ly_nha_nuoc.trinh_do
	end

	if @can_bo_trinh_do.ngoai_ngu_id
		ngoai_ngu = @can_bo_trinh_do.ngoai_ngu.ten_ngoai_ngu
		ngoai_ngu << " #{@can_bo_trinh_do.trinh_do_ngoai_ngu}"
	end

%>

<h2>Chi tiết trình độ cán bộ || Mã số: <%= @can_bo_trinh_do.can_bo_thong_tin.ma_cb %></h2>
<table  class="details">
	<tr>
		<th><b>Họ và tên:</b></th>
		<td style="text-transform: uppercase; font-weight: bold;"><%= @can_bo_trinh_do.can_bo_thong_tin.ho_ten %></td>
	</tr>
	<tr>
		<th><b>Trình độ giáo dục phổ thông:</b></th>
		<td><%= @can_bo_trinh_do.trinh_do_gd_pho_thong %></td>
	</tr>
	<tr>
		<th><b>Học hàm:</b></th>
		<td><%= hoc_ham %></td>
	</tr>
	<tr>
		<th><b>Học vị:</b></th>
		<td><%= hoc_vi %></td>
	</tr>
	<tr>
		<th><b>Trình độ chuyên môn:</b></th>
		<td><%= trinh_do_chuyen_mon %></td>
	</tr>
	<tr>
		<th><b>Lý luận chính trị:</b></th>
		<td><%= ly_luan_ct %></td>
	</tr>
	<tr>
		<th><b>Quản lý nhà nước:</b></th>
		<td><%= quan_ly_nha_nuoc %></td>
	</tr>
	<tr>
		<th><b>Ngoại ngữ:</b></th>
		<td><%= ngoai_ngu %></td>
	</tr>
	<tr>
		<th><b>Tin học:</b></th>
		<td>Trình độ <%= @can_bo_trinh_do.trinh_do_tin_hoc %></td>
	</tr>

</table>

<p class="submits">
  <%= link_to 	'Sửa thông tin cán bộ', 
  				edit_casein_can_bo_trinh_do_path(@can_bo_trinh_do), 
  				:class => 'update', 
  				:style => "text-decoration:none; color: #fff;" %>
</p>
</div>

<%= content_for :sidebar do %>
    <li>
    	<%= link_to "#{casein_show_icon "add"}Thêm mới trình độ cán bộ".html_safe, 
    				new_casein_can_bo_trinh_do_path %>
    </li>
	<li>
		<%= link_to "#{casein_show_icon "table"}Danh sách trình độ cán bộ".html_safe, 
					casein_can_bo_trinh_dos_path %>
	</li>
<% end %>