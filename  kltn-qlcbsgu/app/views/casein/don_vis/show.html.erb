	<tr>
		<th><b>Tên đơn vị:</b></th>
		<td style="text-transform: uppercase; font-weight: bold;"><%= @don_vi.ten_don_vi %></td>
	</tr>
	<tr>
		<th><b>Địa chỉ:</b></th>
		<td><%= @don_vi.dia_chi %></td>
