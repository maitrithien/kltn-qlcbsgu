<!-- Scaffolding generated by Casein v.3.1.11 -->
<div class="view">
	<%= form_tag casein_don_vis_path, :method => "get" do %>
      <label>Hiển thị:
        <%= number_field_tag 	"num_view", 
    							params["num_view"] || 10 , 
    							{
    								:style => "width:50px;", 
    								:placeholder => "10", 
    								:title => "Nhập số dòng và bấm enter",
    								:class => "text"
    							} %> 
    							dòng/trang&nbsp;&nbsp;&nbsp;</label>
      <%= hidden_field_tag "loai_don_vi", params["loai_don_vi"] || 0 %>
  <% end %>
</div>

<%# search basic form %>
<div class="search_basic_form">
<%= form_tag casein_don_vis_path, :method => "get" do %>
	<%= text_field_tag 	"keyword", 
						params["keyword"] , 
						{
							:list => "keyword_autocomplete", 
							:title => "Nhập vào tên đơn vị", 
							:placeholder => "Nhập vào tên đơn vị...",
							:style => "color: gray; width: 300px; padding: 2px;"
						}%>
	<%=hidden_field_tag "loai_don_vi", params["loai_don_vi"] || 0 %>

	<%# data_list %> <%# HTML5 data-list for autocomplete %>

	<%= submit_tag "Tìm Kiếm",:disable_with => "Đang tìm kiếm...", :style => "padding: 3px 10px;" %>

<% end %>
</div>

<div class="blk-share">
<%= form_tag casein_don_vis_path, :method => "get" do %>
<h2>Danh sách đơn Vị
<%= select_tag  "loai_don_vi", 
                    options_from_collection_for_select( LoaiDonVi.all, 
                                                        "id", 
                                                        "ten_loai_don_vi", 
                                                        :selected => params["loai_don_vi"]
                                                      ),
                    {
                    	:prompt => "Tất cả",
                    	:onchange => "this.form.submit();",
                    	:class => "select_link_top",
                    	:title => "Xem theo khối đơn vị, phòng ban"
                	}  %>
</h2>
<% end %>
<% 	if @ten_loai_don_vi == "" 
		@ten_loai_don_vi = "Tất cả khối đơn vị, phòng ban" 
	end 
%>
<h1 style="font-weight:bold; text-transform:uppercase;"><%= @ten_loai_don_vi  %></h1>

<%= render :partial => 'casein/don_vis/table', :locals => { :don_vis => @don_vis } %>

<%= will_paginate @don_vis, :previous_label => '&#8592; Trước', :next_label => 'Sau &#8594;' %>
</div>


<%= content_for :sidebar do %>
	<li><%= link_to "#{casein_show_icon "add"}Thêm mới đơn vị".html_safe, new_casein_don_vi_path %></li>
    <li><%= link_to "#{casein_show_icon "import"}Thêm mới đơn vị từ tập tin excel".html_safe, import_from_excel_casein_don_vis_path %></li>
    <li><%= link_to "#{casein_show_icon('excel')}Xuất danh sách ra excel".html_safe, casein_don_vis_path({:format => :xls, :keyword => params["keyword"], :commit => params["commit"], :utf8 => params["utf8"]}) %></li>
<% end %>