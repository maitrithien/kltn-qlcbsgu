<!-- Scaffolding generated by Casein v.3.1.11 -->
<% page = (params[:page] ? params[:page] : 1).to_i  %>
<% num_view = (params[:num_view] ? params[:num_view] : 10).to_i  %>

<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th>STT</th>
		<th>Tên Đơn Vị</th>
		<th>Địa Chỉ</th>
		<th>Số Điện Thoại</th>
		<th>Email</th>
		<th>&nbsp;</th>
	</tr>
	
	<% don_vis.each_with_index do |don_vi, index| %>
		<tr class="<%= 'even' if index.modulo(2) == 0 %> hover">
			<td><%= num_view * (page - 1) + index + 1 %></td>
			<td><%= casein_table_cell_link don_vi.ten_don_vi, casein_don_vi_path(don_vi) %></td>
			<td><%= casein_table_cell_link don_vi.dia_chi, casein_don_vi_path(don_vi) %></td>
			<td><%= casein_table_cell_link don_vi.so_dien_thoai, casein_don_vi_path(don_vi) %></td>
			<td><%= casein_table_cell_link don_vi.email, casein_don_vi_path(don_vi) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("delete"), casein_don_vi_path(don_vi), :method => :delete, :confirm => "Bạn có chắc muốn xóa đơn vị #{don_vi.ten_don_vi}?") %>
			</td>
		</tr>
	<% end %>
</table>