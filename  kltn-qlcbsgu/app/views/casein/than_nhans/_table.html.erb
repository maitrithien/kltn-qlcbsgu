<!-- Scaffolding generated by Casein v.3.1.11 -->
<% page = (params[:page] ? params[:page] : 1).to_i  %>
<% num_view = (params[:num_view] ? params[:num_view] : 10).to_i  %>
<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th>STT</th>
		<th>Mã cán bộ</th>
		<th>Họ và Tên thân nhân</th>
        <th>Quan hệ</th>
		<th>Năm sinh</th>
		<th style="max-width: 300px;">Quê quán, nghề nghiệp, chức danh, chức vụ, đơn vị công tác, học tập, nơi ở (trong, ngoài nước); thành viên tổ chức chính trị - xã hội...</th>
		<th>&nbsp;</th>
	</tr>
	
	<% than_nhans.each_with_index do |than_nhan, index| %>
		<tr class="<%= 'even' if index.modulo(2) == 0 %> hover">
			<td><%= num_view * (page - 1) + index + 1 %></td>
			<td><%= casein_table_cell_link "#{than_nhan.can_bo_thong_tin.ma_cb} - #{than_nhan.can_bo_thong_tin.ho_ten}", casein_than_nhan_path(than_nhan) %></td>
            <td><%= casein_table_cell_link than_nhan.ho_ten, casein_than_nhan_path(than_nhan) %></td>
			<td><%= casein_table_cell_link than_nhan.quan_he_gia_dinh.ten_quan_he, casein_than_nhan_path(than_nhan) %></td>
			<td><%= casein_table_cell_link than_nhan.nam_sinh, casein_than_nhan_path(than_nhan) %></td>
			<td><%= casein_table_cell_link truncate(than_nhan.nghe_nghiep, :length => 30), casein_than_nhan_path(than_nhan) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("delete"), casein_than_nhan_path(than_nhan), :method => :delete, :confirm => "Bạn có chắc muốn xóa thân nhân #{than_nhan.ho_ten}") %>
			</td>
		</tr>
	<% end %>
</table>