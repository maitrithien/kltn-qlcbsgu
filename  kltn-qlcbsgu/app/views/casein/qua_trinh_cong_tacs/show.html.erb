<!-- Scaffolding generated by Casein v.3.1.11 -->
<% 
	don_vi = ""
	chuc_vu = ""
	thoi_gian_bat_dau = "" 
 	thoi_gian_ket_thuc = "" 
 	if @qua_trinh_cong_tac.don_vi_id 
 		don_vi = @qua_trinh_cong_tac.don_vi.ten_don_vi
 	end 
 	if @qua_trinh_cong_tac.chuc_vu_id
 	 	chuc_vu = @qua_trinh_cong_tac.chuc_vu.ten_chuc_vu 
	end 
	if @qua_trinh_cong_tac.thoi_gian_bat_dau
		thoi_gian_bat_dau = @qua_trinh_cong_tac.thoi_gian_bat_dau.strftime("%d/%m/%Y") 
	end
	if @qua_trinh_cong_tac.thoi_gian_ket_thuc 
	 	thoi_gian_ket_thuc = @qua_trinh_cong_tac.thoi_gian_ket_thuc.strftime("%d/%m/%Y")
	end 
%>

<div class="blk-share">
<h2>Chi tiết lịch sử công tác cán bộ <%= @qua_trinh_cong_tac.can_bo_thong_tin.ma_cb %></h2>
<table  class="details">
	<tr>
		<th><b>Tên cán bộ:</b></th>
		<td style="text-transform: uppercase; font-weight: bold;"><%= @qua_trinh_cong_tac.can_bo_thong_tin.ho_ten %></td>
	</tr>
	<tr>
		<th><b>Đơn vị công tác:</b></th>
		<td><%= don_vi %></td>
	</tr>
	<tr>
		<th><b>Ngày bắt đầu làm việc:</b></th>
		<td><%= thoi_gian_bat_dau %></td>
	</tr>
	<tr>
		<th><b>Ngày chuyển công tác:</b></th>
		<td><%= thoi_gian_ket_thuc %></td>
	</tr>
	<tr>
		<th><b>Chức vụ:</b></th>
		<td><%= chuc_vu %></td>
	</tr>
	<tr>
		<th><b>Số quyết định:</b></th>
		<td><%= @qua_trinh_cong_tac.quyet_dinh.so_qd %></td>
	</tr>
</table>

<p class="submits">
  <%= link_to 	'Sửa thông tin công tác', 
  				edit_casein_qua_trinh_cong_tac_path(@qua_trinh_cong_tac), 
  				:class => 'update', 
  				:style => "text-decoration:none; color: #fff;" %>
</p>
</div>

<%= content_for :sidebar do %>
<li><%= link_to "#{casein_show_icon "add"}Thêm mới lịch sử công tác".html_safe, new_casein_qua_trinh_cong_tac_path %></li>
    <li><%= link_to "#{casein_show_icon "import"}Thêm mới lịch sử công tác từ tập tin excel".html_safe, import_from_excel_casein_qua_trinh_cong_tacs_path %></li>
	<li><%= link_to "#{casein_show_icon "table"}Danh sách quá trình công tác".html_safe, casein_qua_trinh_cong_tacs_path %></li>
<% end %>