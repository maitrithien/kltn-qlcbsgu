<div class="blk-share" style="float: left; width: 97%;">
<script language="javascript">
function checkedAll1 (formid,checkBoxNum,preName,checkAllName) {
	
	var checked = document.getElementById(formid).elements[checkAllName].checked;
	for (var i = 1; i <= checkBoxNum; i++)
	{
		document.getElementById(formid).elements[preName+i].checked = checked;
	}
}
function unCheckAll(formid,checkAllName)
{
	document.getElementById(formid).elements[checkAllName].checked=false;
}

</script>
  	<h2>Thống kê cán bộ theo công việc</h2>
  	<% unless params[:f] %>
  	<div class="paragraph stat toggle">
  		<%= form_tag statistic_by_cong_viec_casein_can_bo_thong_tins_url,:id=>"formStatisticCongViec", :method => :get do %>
  		<div class="tfContainerFullWidth"><p style="font-weight:bold;">(1). Chọn các đơn vị cần thống kê:</p>
			<div class="overflow_scroll">
  				<ul style="margin-left:20px;">
  					<li><label for="dv_all" onclick="checkedAll1('formStatisticCongViec','<%=DonVi.count%>','dv_','dv_all');"><%= check_box_tag "dv_all", true%> &nbsp;Tất cả đơn vị</label>
		  				<ul style="margin-left:20px;">
		  				<% DonVi.all.each do |dv| %>
						
							<li><label for="dv_<%= dv.id %>" onclick="unCheckAll('formStatisticCongViec','dv_all');"><%= check_box_tag "dv_#{dv.id}", true %> <%= dv.ten_don_vi %></label></li>
						
						<% end %>
						</ul>
					</li>
				</ul>
			</div>
		</div>

  		<div class="tfContainerFullWidth"><p style="font-weight:bold;">(2). Chọn các công việc cần thống kê:</p>
	  		<div class="overflow_scroll">
	  			<ul style="margin-left:20px;">
	  				<li><label for="cv_all" onclick="checkedAll1('formStatisticCongViec','<%=CongViec.count%>','cv_','cv_all');"><%= check_box_tag "cv_all", true%> &nbsp;Tất cả công việc</label>
	  					<ul style="margin-left:20px;">
			  			<% CongViec.all.each do |cv| %>
						
							<li><label onclick="unCheckAll('formStatisticCongViec','cv_all');" for="cv_<%= cv.id %>"><%= check_box_tag "cv_#{cv.id}", true %> <%= cv.ten_cong_viec %></label></li>
						
						<% end %>
						<ul>
					</li>
				</ul>
			</div>
		</div>


  		<div class="tfContainerFullWidth" >
       		<p>
       			<%= hidden_field_tag :f, 1 %>
       			<%= submit_tag "Thống kê", :style => "text-align: right; padding: 5px 12px; margin-right: 25px;"%>
       		</p>
		</div>
  		<% end %>
  	<% else %>
  	<%= @loai_lao_dongs %>
		<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
			<tr>
				<th>Tên đơn vị</th>
				<% @cong_viecs.map do |td| %>
					<td><%= td %></td>
				<% end %>
			</tr>
			<% @hash.each do |h| %>
			<tr>
				<th align="center"><%= DonVi.find(h[0]).ten_don_vi %></th>
				<% h[1].map do |r| %>
					<td><%= r[1] %></td>
				<% end %>
			</tr>
			<% end %>
			
		</table> 
		<p class="submits">
			<% unless @hash.empty? %>
				<%= link_to "Xuất nội dung ra excel ", "#{statistic_by_cong_viec_casein_can_bo_thong_tins_url(:format => :xls)}?#{ @params.join("&") }", :class=> "update", :style => "text-decoration:none; color: #fff;" %>
			<% end %>
		</p>
  	<% end %>
</div>