	<li>
		<%= link_to "#{casein_show_icon_custom_style("custom_download", "width:20px; margin-top:-5px;")}Tùy chọn nội dung xuất ra excel".html_safe, custom_export_data_casein_can_bo_thong_tins_path %>
	</li>

<% end %>