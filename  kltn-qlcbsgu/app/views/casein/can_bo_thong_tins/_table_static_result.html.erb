<!-- Scaffolding generated by Casein v.3.1.11 -->

<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th>Mã CB</th>
		<th>Họ và tên</th>
		<th>Ngày sinh</th>
		<th>Dân tộc</th>
		<th>Chức danh</th>
		<th>Ngạch</th>
		
	</tr>
	<% gt_f = [true, false] %>
	<% DonVi.all.each do |dv| %>
		<tr class="even">
			<td colspan="6"><a><b style="text-transform:uppercase;"><%= dv.ten_don_vi %></b></a></td>
		</tr>
		<% gt_f.map do |g| %>
			<tr class="even">
				<td>&nbsp;</td>
				<td colspan="5">
					<% if g %>
						<a><b>Nam</b></a>
					<% else %>
						<a><b>Nữ</b></a>
					<% end %>
				</td>
			</tr>
		<% can_bo_thong_tins.each do |can_bo_thong_tin| %>
				<%
				if can_bo_thong_tin.don_vi_id == dv.id and can_bo_thong_tin.gioi_tinh == g
					ngay_sinh = ""
					chuc_danh = ""
					ngach = ""
					trinh_do = CanBoTrinhDo.find_by_can_bo_thong_tin_id can_bo_thong_tin.id
					if can_bo_thong_tin.ngay_sinh
						ngay_sinh = can_bo_thong_tin.ngay_sinh.strftime("%d/%m/%Y")
					end
					if trinh_do
						if trinh_do.hoc_ham_id
							chuc_danh << "#{trinh_do.hoc_ham.ten_hoc_ham} "
							if trinh_do.hoc_vi_id
								chuc_danh << "#{trinh_do.hoc_vi.ten_hoc_vi}"
							end
						end
					end

					if can_bo_thong_tin.bac_luong_id
						if can_bo_thong_tin.bac_luong.ngach_id
							ngach << "#{can_bo_thong_tin.bac_luong.ngach.ten_ngach} - Bậc #{can_bo_thong_tin.bac_luong.bac} - Hệ số lương #{can_bo_thong_tin.bac_luong.he_so_luong}"
						end
					end
				%>
				<tr class="hover">
					<td>
						<b>
							<%= casein_table_cell_link 	can_bo_thong_tin.ma_cb, 
														casein_can_bo_thong_tin_path(can_bo_thong_tin) %>
						</b>
					</td>
					<td>
						<span style="text-transform:uppercase;">
							<%= casein_table_cell_link 	can_bo_thong_tin.ho_ten, 
														casein_can_bo_thong_tin_path(can_bo_thong_tin) %>
						</span>
					</td>
					<td>
						<%= casein_table_cell_link 	"#{ngay_sinh}", 
													casein_can_bo_thong_tin_path(can_bo_thong_tin) %>
					</td>
					<td>
						<%= casein_table_cell_link 	can_bo_thong_tin.dan_toc, 
													casein_can_bo_thong_tin_path(can_bo_thong_tin) %>
					</td>
					<td>
						<%= casein_table_cell_link "#{chuc_danh}", casein_can_bo_thong_tin_path(can_bo_thong_tin) %>
					</td>
					<td>
						<%= casein_table_cell_link "#{ngach}", casein_can_bo_thong_tin_path(can_bo_thong_tin) %>
					</td>
				</tr>
				<% end %>
			<% end %>
		<% end %>
	<% end %>
</table>