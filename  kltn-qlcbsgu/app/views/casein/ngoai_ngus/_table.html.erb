<!-- Scaffolding generated by Casein v.3.1.11 -->

<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th>Ngoại ngữ</th>
		<th>Ghi chú</th>
		<th>&nbsp;</th>
	</tr>
	
	<% ngoai_ngus.each_with_index do |ngoai_ngu, index| %>
		<tr class="<%= 'even' if index.modulo(2) == 0 %> hover">
			<td><%= casein_table_cell_link truncate(ngoai_ngu.ten_ngoai_ngu, :length => 50), casein_ngoai_ngu_path(ngoai_ngu) %></td>
			<td><%= casein_table_cell_link truncate(ngoai_ngu.ghi_chu, :length => 100), casein_ngoai_ngu_path(ngoai_ngu) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("delete"), casein_ngoai_ngu_path(ngoai_ngu), :method => :delete, :confirm => "Bạn có chắc muốn xóa ngoại ngữ #{ngoai_ngu.ten_ngoai_ngu} ?") %>
			</td>
		</tr>
	<% end %>
</table>