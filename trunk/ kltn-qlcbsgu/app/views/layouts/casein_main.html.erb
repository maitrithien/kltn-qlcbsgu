<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
		<title><%= casein_generate_page_title %></title>
		<% casein_config_stylesheet_includes.each do |stylesheet| %>
			<%= stylesheet_link_tag(stylesheet) %>
		<% end %>
		
		<% casein_config_javascript_includes.each do |javascript| %>
			<%= javascript_include_tag(javascript) %>
		<% end %>

		<%= csrf_meta_tag %>
	</head>
	<body>
		<div id="header">
			<h1><%= link_to(image_tag(casein_config_logo, :alt => casein_config_website_name, :size => "50x50"), :controller => :casein) %>
            <div style="font-family: tahoma, arial; font-size: smaller; margin-left: 70px; margin-top: -22px;text-transform: uppercase;"><%= Param.get_param_value("website_name") %></div>
            </h1>
			<div id="dashboard">
				<% if @session_user != nil %>
				<ul>
					<li>Chào <%= @session_user.name %>!</li>
					<li>Múi giờ: <%= Time.zone.name %></li>
					<li><%= link_to 'Hồ sơ', casein_user_path(@session_user) %></li>
					<li class="lastItem"><%= link_to 'Đăng xuất', casein_user_session_path, :method => :delete %></li>
				</ul>	
				<% end %>
			</div>
			<div id="navigation">
				<ul class="topmenu" id="css3menu">
					<%= render :partial => '/casein/layouts/left_navigation' %>
				</ul>		
			</div>
			<div id="altNavigation">
				<ul>
					<% if @session_user.is_admin? %>
						<li><%= link_to 'Tài khoản người dùng', casein_users_path %></li>
					<% end %>
					<%= render :partial => '/casein/layouts/right_navigation' %>
				</ul>
			</div>
		</div>
		<div id="rightBar">
			<div class="spacer"></div>
			<ul>
				<%= yield :sidebar %>
			</ul>
		</div>
		<div id="content">
			<div id="data">
				<% if flash[:warning] %>
					<div id="error">
						<%= flash[:warning] %>
					</div>
				<% end %>
				<% if flash[:notice] %>
					<div id="notice">
						<%= flash[:notice] %>
					</div>
				<% end %>
				<%= yield %>
			</div>
		</div>
	</body>
</html>