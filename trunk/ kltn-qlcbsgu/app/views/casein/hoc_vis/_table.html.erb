	<% hoc_vis.each_with_index do |hoc_vi, index| %>
		<tr class="<%= 'even' if index.modulo(2) == 0 %> hover">
			<td><%= casein_table_cell_link hoc_vi.ten_hoc_vi, casein_hoc_vi_path(hoc_vi) %></td>
