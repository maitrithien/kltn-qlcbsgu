			<td class="delete">
				<%= link_to(casein_show_row_icon("delete"), casein_hoc_vi_path(hoc_vi), :method => :delete, :confirm => "Bạn có chắc muốn xóa học vị #{hoc_vi.ten_hoc_vi}") %>
