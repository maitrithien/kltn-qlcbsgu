<!-- Scaffolding generated by Casein v.3.1.11 -->

<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th>Tên tham số</th>
		<th>Giá trị tham số</th>
		<th>Tùy chọn</th>
		<th>Mô tả</th>
		<th>&nbsp;</th>
	</tr>
	
	<% params.each_with_index do |param, index| %>
		<tr class="<%= 'even' if index.modulo(2) == 0 %> hover">
			<td><%= casein_table_cell_link param.param_name, casein_param_path(param) %></td>
			<td><%= casein_table_cell_link truncate(param.param_value, :length => 30 ), casein_param_path(param) %></td>
			<td><%= casein_table_cell_link truncate(param.options, :length => 30 ), casein_param_path(param) %></td>
			<td><%= casein_table_cell_link truncate(param.description, :length => 30 ), casein_param_path(param) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("delete"), casein_param_path(param), :method => :delete, :confirm => "Are you sure you want to delete this param?") %>
			</td>
		</tr>
	<% end %>
</table>