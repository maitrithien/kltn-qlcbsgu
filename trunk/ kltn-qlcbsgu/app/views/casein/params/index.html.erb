<!-- Scaffolding generated by Casein v.3.1.11 -->
<div class="search_basic_form">
  <%= form_tag casein_params_path, :method => "get" do %>
      <%= text_field_tag "keyword", params["keyword"] , {:placeholder => "Nhập vào tên tham số",   :style => "color: gray; width: 300px; padding: 2px;"}%>
      <%= submit_tag "Tìm Kiếm",:disable_with => "Đang tìm kiếm...", :style => "padding: 3px 10px;" %>

  <% end %>
</div>

<div class="blk-share">
<h2>Bảng tham số</h2>

<%= render :partial => 'casein/params/table', :locals => { :params => @params } %>

<%= will_paginate @params, :previous_label => '&#8592; Trước', :next_label => 'Sau &#8594;'%>
</div>


<%= content_for :sidebar do %>
	<li><%= link_to "#{casein_show_icon "add"}Thêm mới tham số".html_safe, new_casein_param_path %></li>
    <li><%= link_to "#{casein_show_icon "import"}Thêm mới tham số từ tập tin excel".html_safe, import_from_excel_casein_params_path %></li>
    <li><%= link_to "#{casein_show_icon('excel')}Xuất danh sách ra excel".html_safe, casein_params_path({:format => :xls, :keyword => params["keyword"], :commit => params["commit"], :utf8 => params["utf8"]}) %></li>
<% end %>