<!-- Scaffolding generated by Casein v.3.1.11 -->

<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
        <th>Số quyết định</th>
        <th>Loại quyết định</th>
		<th>Ngày ra QĐ</th>
		<th>Nội dung</th>
		<th>&nbsp;</th>
		<th>&nbsp;</th>
	</tr>
	
	<% quyet_dinhs.each_with_index do |quyet_dinh, index| %>
		<tr class="<%= 'even' if index.modulo(2) == 0 %> hover">

            <td><%= casein_table_cell_link quyet_dinh.so_qd, casein_quyet_dinh_path(quyet_dinh) %></td>
            <td><%= casein_table_cell_link quyet_dinh.loai_quyet_dinh.ten_loai_qd, casein_quyet_dinh_path(quyet_dinh) %></td>
			<td><%= casein_table_cell_link quyet_dinh.ngay_ra_qd.strftime("%d/%m/%Y"), casein_quyet_dinh_path(quyet_dinh) %></td>
			<td><%= casein_table_cell_link truncate(quyet_dinh.noi_dung_tom_tat, :length => 100), casein_quyet_dinh_path(quyet_dinh) %></td>
			<td>
              <% if quyet_dinh.tep_tin_dinh_kem.to_s != "" %>
              <a href="<%= quyet_dinh.tep_tin_dinh_kem %>"><%= casein_show_icon_custom_style("download", "margin-top:-5px; margin-left: 5px;") %>tải về</a>
              <% end %>
            </td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("delete"), casein_quyet_dinh_path(quyet_dinh), :method => :delete, :confirm => "Bạn có chắc muốn xóa quyết định #{quyet_dinh.so_qd}") %>
			</td>
		</tr>
	<% end %>
</table>