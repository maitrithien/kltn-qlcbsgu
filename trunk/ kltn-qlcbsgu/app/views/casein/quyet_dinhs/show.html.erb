<!-- Scaffolding generated by Casein v.3.1.11 -->
<div class="blk-share">
<h2>Chi tiết quyết định</h2>
<table  class="details">
	<tr>
		<th><b>Số quyết định:</b></th>
		<td style="text-transform: uppercase; font-weight: bold;"><%= @quyet_dinh.so_qd %></td>
	</tr>
	<tr>
		<th><b>Loại quyết định:</b></th>
		<td><%= @quyet_dinh.loai_quyet_dinh.ten_loai_qd if @quyet_dinh.loai_quyet_dinh_id %></td>
	</tr>
	<tr>
		<th><b>Nội dung tóm tắt:</b></th>
		<td><%= @quyet_dinh.noi_dung_tom_tat %></td>
	</tr>
	<tr>
		<th><b>Ngày ra quyết định:</b></th>
		<td><%= @quyet_dinh.ngay_ra_qd.strftime("%d/%m/%Y") %></td>
	</tr>
	<tr>
		<th><b>Áp dụng cho:</b></th>
		<td>
			<% canbothongtin = CanBoThongTin.tim_ten_cho_quyet_dinh(@quyet_dinh.id)
			if canbothongtin
				canbothongtin.each do |cb|
			%>
			<p>
			<%= cb.ma_cb%> - <%= cb.ho_ten%>
		</p>

			<%
				end
			end%>
		</td>
	</tr>
	
	<tr>
		<th><b>Tập tin đính kèm:</b></th>
		<td><a href="<%= @quyet_dinh.tep_tin_dinh_kem %>" style="color:#3561b1; font-size:1em; font-weight:bold;"><%= File.basename("#{@quyet_dinh.tep_tin_dinh_kem}") %></a>
		</td>
	</tr>
	<tr>
		<th><b>Kích thước tập tin:</b></th>
		<td><%= (File.size?("#{Rails.root}/public#{@quyet_dinh.tep_tin_dinh_kem}").to_f / 2**10).round(1) %> KB</a>
		</td>
	</tr>
</table>

<p class="submits">
  <%= link_to 	'Sửa thông tin quyết định', 
  				edit_casein_quyet_dinh_path(@quyet_dinh), 
  				:class => 'update', 
  				:style => "text-decoration:none; color: #fff;" %>
</p>
</div>

<%= content_for :sidebar do %>
   <li><%= link_to "#{casein_show_icon "add"}Thêm mới quyết định".html_safe, new_casein_quyet_dinh_path %></li>
    <li><%= link_to "#{casein_show_icon "import"}Thêm mới quyết định từ tập tin excel".html_safe, import_from_excel_casein_quyet_dinhs_path %></li>
	<li><%= link_to "#{casein_show_icon "table"}Danh sách quyết định".html_safe, casein_quyet_dinhs_path %></li>
<% end %>