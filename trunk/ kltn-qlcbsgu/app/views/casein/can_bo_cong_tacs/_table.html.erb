<!-- Scaffolding generated by Casein v.3.1.11 -->
<% page = (params[:page] ? params[:page] : 1).to_i  %>
<% num_view = (params[:num_view] ? params[:num_view] : 10).to_i  %>
<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
	<tr>
		<th>STT</th>
		<th>Cán bộ</th>
		<th>Đơn vị<br>tuyển dụng</th>
		<th>Nghề nghiệp<br>trước tuyển dụng</th>
		<th>Công việc chính<br>được giao</th>
		<th>Sở trường<br>công tác</th>
		<th>Ngày bắt đầu<br>làm việc</th>

		<th>&nbsp;</th>
	</tr>
	
	<% can_bo_cong_tacs.each_with_index do |can_bo_cong_tac, index| %>
		<% ngay_bat_dau_lam_viec = "" %>
		<% if can_bo_cong_tac.ngay_bat_dau_lam_viec %>
			<% ngay_bat_dau_lam_viec = can_bo_cong_tac.ngay_bat_dau_lam_viec.strftime("%d/%m/%Y") %>
		<% end %>
		<tr class="<%= 'even' if index.modulo(2) == 0 %> hover">
			<td><%= num_view * (page - 1) + index + 1 %></td>
          	<td><%= casein_table_cell_link "#{can_bo_cong_tac.can_bo_thong_tin.ma_cb} - #{can_bo_cong_tac.can_bo_thong_tin.ho_ten}", casein_can_bo_cong_tac_path(can_bo_cong_tac) %></td>
			<td><%= casein_table_cell_link can_bo_cong_tac.don_vi.ten_don_vi, casein_can_bo_cong_tac_path(can_bo_cong_tac) %></td>
			<td><%= casein_table_cell_link truncate(can_bo_cong_tac.nghe_nghiep_truoc_tuyen_dung, :length => 20), casein_can_bo_cong_tac_path(can_bo_cong_tac) %></td>
			<td><%= casein_table_cell_link truncate(can_bo_cong_tac.cong_viec.ten_cong_viec, :length => 20), casein_can_bo_cong_tac_path(can_bo_cong_tac) %></td>
			<td><%= casein_table_cell_link truncate(can_bo_cong_tac.so_truong_cong_tac, :length => 25), casein_can_bo_cong_tac_path(can_bo_cong_tac) %></td>
			<td><%= casein_table_cell_link ngay_bat_dau_lam_viec, casein_can_bo_cong_tac_path(can_bo_cong_tac) %></td>

			<td class="delete">
				<%= link_to(casein_show_icon_custom_style("delete", "margin-top:7px;"), casein_can_bo_cong_tac_path(can_bo_cong_tac), :method => :delete, :confirm => "Bạn có chắc muốn xóa lịch sử công tác này?") %>
			</td>
		</tr>
	<% end %>
</table>