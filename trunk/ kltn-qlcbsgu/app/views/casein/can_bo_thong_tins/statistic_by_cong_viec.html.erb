<div class="blk-share" style="float: left; width: 97%;">
  	<h2>Thống kê cán bộ theo công việc</h2>
  	<% unless params[:f] %>
  	<div class="paragraph stat toggle">
  		<%= form_tag statistic_by_cong_viec_casein_can_bo_thong_tins_url, :method => :get do %>
  		<div class="tfContainerFullWidth"><p style="font-weight:bold;">(1). Chọn các đơn vị cần thống kê:</p>
			<div class="overflow_scroll">
				<% DonVi.all.each do |dv| %>
					
						<label for="dv_<%= dv.id %>"><%= check_box_tag "dv_#{dv.id}", true %> <%= dv.ten_don_vi %></label><br>
					
				<% end %>
			</div>
			<p></p>
		</div>

  		<div class="tfContainerFullWidth"><p style="font-weight:bold;">(2). Chọn các công việc cần thống kê:</p>
	  		<div class="overflow_scroll">
	  			<% CongViec.all.each do |cv| %>
				
					<label for="cv_<%= cv.id %>"><%= check_box_tag "cv_#{cv.id}", true %> <%= cv.ten_cong_viec %></label><br>
				
				<% end %>
			</div>
		</div>


  		<div class="tfContainerFullWidth" >
       		<p>
       			<%= hidden_field_tag :f, 1 %>
       			<%= submit_tag "Thống kê", :style => "text-align: right; padding: 5px 12px; margin-right: 25px;"%>
       		</p>
		</div>
  		<% end %>
  	<% else %>
  	<%= @loai_lao_dongs %>
		<table cellpadding="0" cellspacing="0" id="itemList" class="itemList">
			<tr>
				<th>Tên đơn vị</th>
				<% @cong_viecs.map do |td| %>
					<td><%= td %></td>
				<% end %>
			</tr>
			<% @hash.each do |h| %>
			<tr>
				<th align="center"><%= DonVi.find(h[0]).ten_don_vi %></th>
				<% h[1].map do |r| %>
					<td><%= r[1] %></td>
				<% end %>
			</tr>
			<% end %>
			
		</table> 
		<p class="submits">
			<% unless @hash.empty? %>
				<%= link_to "Xuất nội dung ra excel ", "#{statistic_by_cong_viec_casein_can_bo_thong_tins_url(:format => :xls)}?#{ @params.join("&") }", :class=> "update", :style => "text-decoration:none; color: #fff;" %>
			<% end %>
		</p>
  	<% end %>
</div>