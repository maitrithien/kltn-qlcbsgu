
<table cellpadding="0" cellspacing="0" id="itemList" class="itemList center">
  <tr>
    <th>STT</th>
    <th>Họ và tên</th>
    <th>Năm sinh</th>
    <th>Quan hệ</th>
    <th>Quê quán, nghề nghiệp...</th>
    <th>Ghi chú</th>
    <th>[Sửa]</th>
    <th>[Xóa]</th>
  </tr>

  <% than_nhans.each_with_index do |than_nhan, index| %>
      <% quan_he = "" %>
      <% if than_nhan.quan_he_gia_dinh_id %>
              <% quan_he = than_nhan.quan_he_gia_dinh.ten_quan_he %>
      <% end %>
      <tr class="<%= 'even' if index.modulo(2) == 0 %> hover">
        <td><%= index + 1 %></td>
        <td><%= casein_table_cell_link than_nhan.ho_ten, casein_than_nhan_path(than_nhan) %></td>
        <td><%= casein_table_cell_link than_nhan.nam_sinh, casein_than_nhan_path(than_nhan) %></td>
        <td><%= casein_table_cell_link quan_he, casein_than_nhan_path(than_nhan) %></td>
        <td><%= casein_table_cell_link than_nhan.nghe_nghiep, casein_than_nhan_path(than_nhan) %></td>
        <td><%= casein_table_cell_link than_nhan.ghi_chu, casein_than_nhan_path(than_nhan) %></td>
        <td class="delete"><%= link_to(casein_show_row_icon("edit"), edit_casein_than_nhan_path(than_nhan)) %></td>
        <td class="delete"><%= link_to(casein_show_row_icon("delete"), casein_than_nhan_path(than_nhan), :method => :delete, :confirm => "Bạn có chắc muốn xóa thân nhân #{than_nhan.ho_ten}") %></td>
      </tr>

  <% end %>
</table>
<p></p>