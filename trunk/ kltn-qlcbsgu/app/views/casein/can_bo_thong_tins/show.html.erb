</tr>
<tr>
	<td><b>Tên gọi khác:</b></td>
	<td><%= @can_bo_thong_tin.ten_goi_khac %></td>
</tr>
<tr>
	<td><b>Ngày sinh:</b></td>
	<td><%= @can_bo_thong_tin.ngay_sinh.strftime("%d/%m/%Y") %></td>
</tr>
<tr>
	<td><b>Giới tính:</b></td>
	<td><% if @can_bo_thong_tin.gioi_tinh %>
          <label>Nam</label>
      <% else %> <label>Nữ</label>
      <% end %>
    </td>
</tr>
<tr>
	<td><b>Nơi sinh:</b></td>
	<td><%= @can_bo_thong_tin.noi_sinh %></td>
</tr>
<tr>
	<td><b>Quê quán:</b></td>
	<td><%= @can_bo_thong_tin.que_quan %></td>
</tr>
<tr>
	<td><b>Dân tộc:</b></td>
	<td><%= @can_bo_thong_tin.dan_toc %></td>
</tr>
<tr>
	<td><b>Tôn giáo:</b></td>
	<td><%= @can_bo_thong_tin.ton_giao %></td>
</tr>
