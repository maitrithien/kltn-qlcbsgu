	<td><%= @can_bo_thong_tin.noi_o_hien_nay %></td>
</tr>
<tr>
	<td><b>Nơi ĐK HKTT:</b></td>
	<td><%= @can_bo_thong_tin.noi_dang_ky_ho_khau_thuong_tru %></td>
</tr>
<tr>
	<td><b>Số CMND:</b></td>
	<td><%= @can_bo_thong_tin.so_cmnd %></td>
</tr>
<tr>
	<td><b>Ngày cấp:</b></td>
	<td><%= @can_bo_thong_tin.ngay_cap_cmnd.strftime("%d/%m/%Y") %></td>
</tr>
<tr>
	<td><b>Số sổ BHXH:</b></td>
	<td><%= @can_bo_thong_tin.so_BHXH %></td>
</tr>
<tr>
  <td><b>Quyết Định tuyển dụng:</b></td>
  <td><%= @can_bo_thong_tin.quyet_dinh.so_qd %></td>
</tr>
<%if @can_bo_thong_tin.loai_lao_dong_id%>
<tr>
  <td><b>Loại Lao Động:</b></td>
  <td><%= @can_bo_thong_tin.loai_lao_dong.ten_loai_lao_dong %></td>
</tr>
<%end%>
<%# Thông tin ngạch bậc hiện tại %>
