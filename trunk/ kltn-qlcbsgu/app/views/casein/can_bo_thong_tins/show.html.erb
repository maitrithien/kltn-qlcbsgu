	<div style="margin-left:90px">
      <% if @can_bo_thong_tin.hinh_anh.to_s != "" %>
	    <%= image_tag @can_bo_thong_tin.hinh_anh, :size => "113x160", :class => "avatar" %>
      <% else %>
        <%= image_tag "/casein/images/default_avatar.png", :size => "113x160" %>
      <% end %>
	</div>
</div>

<div class="tfcontenerfull">
  <%# thông tin cán bộ %>
